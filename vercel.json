{
  "version": 2,
  "name": "travel-guide",
  "buildCommand": "cd client && npm install --legacy-peer-deps && npm run build",
  "outputDirectory": "client/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "env": {
    "VITE_APP_API_URL": "/api",
    "VITE_APP_NAME": "Travel Guide",
    "VITE_APP_VERSION": "1.0.0"
  }
} 